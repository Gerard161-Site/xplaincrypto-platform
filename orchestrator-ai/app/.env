# Application Configuration
NODE_ENV=production
PORT=3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-key-here-make-it-long-and-random

# API Configuration
API_BASE_URL=http://backend:8001
FRONTEND_PORT=3000

# Database Configuration
DATABASE_URL=postgresql://orchestrator:orchestrator_password@postgres:5432/orchestrator_db
POSTGRES_DB=orchestrator_db
POSTGRES_USER=orchestrator
POSTGRES_PASSWORD=orchestrator_password

# Redis Cache Configuration
REDIS_CACHE_PORT=6380
REDIS_CACHE_PASSWORD=redis_cache_123
REDIS_URL=redis://:redis_cache_123@redis-cache:6379

# OpenAI Configuration (for backend)
OPENAI_API_KEY=your-openai-api-key-here

# Security Configuration
SECURITY_LEVEL=medium
API_KEY=your-secure-api-key-here

# SSH Configuration
DEPLOY_HOST=206.81.0.22
DEPLOY_USER=root
DEPLOY_KEY_PATH=/root/.ssh/id_rsa

# Optional SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging
LOG_LEVEL=info

# Performance
NODE_OPTIONS=--max-old-space-size=2048